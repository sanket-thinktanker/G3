<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/dim_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_5"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/img_store_locator" />

            <in.thinktanker.g3.Custom.TextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_10"
                android:text="G3+ Showroom"
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/dim_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <in.thinktanker.g3.Custom.TextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dim_10"
                android:text="251/A, SUTARIYA TOWN, \nG3 GARMENT SHOP, \nNEAR JOLLY SHOPPING,\nGHOD DOD ROAD, \nSUART - 395007"
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/dim_11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5"
                android:orientation="horizontal">

                <in.thinktanker.g3.Custom.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TELNO:"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/dim_11" />

                <in.thinktanker.g3.Custom.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91-261-2654888/2656999"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/dim_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:orientation="horizontal">

                <in.thinktanker.g3.Custom.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-MAIL:"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/dim_11" />

                <in.thinktanker.g3.Custom.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="customercare@g3fashions.in"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/dim_11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>