<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/dim_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dim_60"
            android:layout_height="@dimen/dim_60"
            android:src="@drawable/account_detail_img" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dim_60"
            android:layout_height="@dimen/dim_60"
            android:layout_marginLeft="@dimen/dim_20"
            android:src="@drawable/account_detail_img" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dim_60"
            android:layout_height="@dimen/dim_60"
            android:layout_marginLeft="@dimen/dim_20"
            android:src="@drawable/account_detail_img" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dim_60"
            android:layout_height="@dimen/dim_60"

            android:src="@drawable/account_detail_img" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_brand_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"></android.support.v7.widget.RecyclerView>
</LinearLayout>