<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dim_10"
    android:paddingLeft="@dimen/dim_10"
    android:paddingRight="@dimen/dim_10"
    android:paddingTop="@dimen/dim_10">

    <RelativeLayout
        android:layout_width="@dimen/dim_170"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_catalogue"
            android:layout_width="@dimen/dim_170"
            android:layout_height="@dimen/dim_200"
            android:scaleType="fitXY"
            android:src="@drawable/catalogue_img_1" />

        <LinearLayout
            android:id="@+id/ll_discount"
            android:layout_width="@dimen/dim_30"
            android:layout_height="@dimen/dim_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dim_20"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@drawable/shape"
            android:gravity="center"
            android:orientation="vertical">

            <in.thinktanker.g3.Custom.TextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="50%"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dim_8" />

            <in.thinktanker.g3.Custom.TextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="OFF"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dim_8" />
        </LinearLayout>

        <in.thinktanker.g3.Custom.TextViewLight
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_catalogue"
            android:layout_marginTop="@dimen/dim_10"
            android:text="Brand"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/dim_12" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_brand"
            android:layout_marginTop="@dimen/dim_10">

            <in.thinktanker.g3.Custom.TextViewLight
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/dim_12" />

            <in.thinktanker.g3.Custom.TextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dim_10"
                android:text="Rs.2000"
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/dim_12" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>