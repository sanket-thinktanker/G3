<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/dim_8"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/ll_reference_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/img_reference_friend" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_reference_friend"
        android:layout_marginTop="@dimen/dim_10"
        android:orientation="vertical">

        <in.thinktanker.g3.Custom.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_10"
            android:text="Refer A Friend"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/dim_20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_5"
            android:gravity="center"
            android:orientation="horizontal">

            <in.thinktanker.g3.Custom.TextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" and earn "
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/dim_18" />

            <in.thinktanker.g3.Custom.TextViewLight
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text=" Rs. 500 "
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dim_18" />

            <in.thinktanker.g3.Custom.TextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" in your wallet "
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/dim_18" />
        </LinearLayout>

        <in.thinktanker.g3.Custom.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_5"
            android:text="also your friend earns discount"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/dim_16" />

        <in.thinktanker.g3.Custom.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_5"
            android:text="on first purchase"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/dim_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_discount"
        android:layout_marginTop="@dimen/dim_20"
        android:gravity="center"
        android:orientation="horizontal">

        <in.thinktanker.g3.Custom.TextViewSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_corner_border"
            android:text="500"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/dim_25" />

        <View
            android:layout_width="@dimen/dim_170"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_2"
            android:background="@drawable/dotted_line"
            android:layerType="software" />

        <ImageView
            android:layout_width="@dimen/dim_50"
            android:layout_height="@dimen/dim_40"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/white_wallet_icon" />

    </LinearLayout>

    <in.thinktanker.g3.Custom.TextViewLight
        android:id="@+id/tv_refer_now"
        android:layout_width="@dimen/dim_170"
        android:layout_height="@dimen/dim_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dim_20"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:text="REFER NOW"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/dim_16" />

</RelativeLayout>