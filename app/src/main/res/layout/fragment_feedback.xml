<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/dim_10">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <in.thinktanker.g3.Custom.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Rate US !!"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dim_18" />

        <in.thinktanker.g3.Custom.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_15"
            android:gravity="center"
            android:text="Liked what you saw so far ? If you like our products and are satisfied "
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/dim_10" />

        <in.thinktanker.g3.Custom.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_10"
            android:text="by our quality and price please rate us"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/dim_10" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_20"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:id="@+id/iv_star1"
                android:layout_width="@dimen/dim_35"
                android:layout_height="@dimen/dim_35"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/iv_star2"
                android:layout_width="@dimen/dim_35"
                android:layout_height="@dimen/dim_35"
                android:layout_marginLeft="@dimen/dim_10"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/iv_star3"
                android:layout_width="@dimen/dim_35"
                android:layout_height="@dimen/dim_35"
                android:layout_marginLeft="@dimen/dim_10"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/iv_star4"
                android:layout_width="@dimen/dim_35"
                android:layout_height="@dimen/dim_35"
                android:layout_marginLeft="@dimen/dim_10"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/iv_star5"
                android:layout_width="@dimen/dim_35"
                android:layout_height="@dimen/dim_35"
                android:layout_marginLeft="@dimen/dim_10"
                android:src="@drawable/star" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout"
        android:layout_marginTop="@dimen/dim_40"
        android:orientation="vertical">

        <in.thinktanker.g3.Custom.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Give Us Your Feedback"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dim_20" />

        <in.thinktanker.g3.Custom.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_10"
            android:text="Please let us know the things on which we should improve"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/dim_10" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_130"
        android:layout_below="@+id/ll_feedback"
        android:layout_marginTop="@dimen/dim_20">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_border"
            android:cursorVisible="false"
            android:gravity="top"
            android:padding="@dimen/dim_5"/>
    </RelativeLayout>

    <in.thinktanker.g3.Custom.TextViewLight
        android:id="@+id/tv_submit"
        android:layout_width="@dimen/dim_170"
        android:layout_height="@dimen/dim_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:text="SUBMIT"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/dim_14" />

</RelativeLayout>